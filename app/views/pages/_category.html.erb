<div class="category-section">
    <h2 class="cetegory-title"> Explore by Category</h2>
      <div class="sub-category-section">
        <div class="left-sub-category">
            <div class="search-field">
                <i class="fa-solid fa-magnifying-glass"></i>
                <input type="text" placeholder="Search" />
            </div>
            <div id="category-toggle-btn" class="toggle-category" onclick="category()">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="20" viewBox="0 0 24 20" fill="none">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M23.3333 3.33341H0.666667C0.298477 3.33341 0 3.03494 0 2.66675V1.33341C0 0.965225 0.298477 0.666748 0.666667 0.666748H23.3333C23.7015 0.666748 24 0.965225 24 1.33341V2.66675C24 3.03494 23.7015 3.33341 23.3333 3.33341ZM24 10.6669V9.33354C24 8.96535 23.7015 8.66687 23.3333 8.66687H0.666667C0.298477 8.66687 0 8.96535 0 9.33354V10.6669C0 11.0351 0.298477 11.3335 0.666667 11.3335H23.3333C23.7015 11.3335 24 11.0351 24 10.6669ZM24 17.3335V18.6668C24 19.035 23.7015 19.3335 23.3333 19.3335H0.666667C0.298477 19.3335 0 19.035 0 18.6668V17.3335C0 16.9653 0.298477 16.6668 0.666667 16.6668H23.3333C23.7015 16.6668 24 16.9653 24 17.3335Z" fill="#07484A"></path>
                </svg>
            </div>
            <ul id="category-toggle-list">
                <%@categories.each do |row|%>
                    <li class="category-list category-active">
                        <%=row.name %>
                    </li>
                 <%end%>
            </ul>
            <div class="category-btn">
                <button>All Categories </button>
                <i class="fa-solid fa-arrow-right-long"></i>
            </div>

        </div>

        <div class="category-cards">
            <%@top_categories.each do |category|%>
                <div class="first-category-cards">
                    <%=image_tag "#{category.id}_category", class: "image"%>
                        <div class="category-card-text">
                            <h2><%=category.name%> </h2>
                            <button>Explore </button>
                        </div>
                  </div>
             <%end%>
        </div>
    </div>
  </div>
</div>

<script>
    $(document).ready(function() {
        $('#category-toggle-btn').click(function() {
            $('#category-toggle-list').toggle('slow');
        });
    });
</script>