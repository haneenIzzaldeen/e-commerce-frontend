<div class="product-section">
<h2 class="product-title">Popular Products </h2>
<div class="product-card-container">
<div class="sub-product-container">
    <%@products.each do |product|%>
        <div class="product-cards  product-color-<%= product.color%>">
            <%=image_tag "#{product.id}_product", class: "image"%>
                <h2><%=product.name%> </h2>
                <p>
                  <%=product.description %>
                </p>
                <p class="price-paragraph">$
                   <%=product.price%>
                <p>
            </div>
        <%end%>
   </div>
 </div>
    <div class="product-btn">
        <button>Explore All items </button>
        <i class="fa-solid fa-arrow-right-long"></i>
    </div>
</div>